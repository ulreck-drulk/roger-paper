---
export interface Props {
  href: string;
  className?: string;
  ariaLabel?: string;
  title?: string;
  disabled?: boolean;
}

const { href, className, ariaLabel, title, disabled = false } = Astro.props;
---
<!-- this was located below href inside a features, removed as per Astro recomendation tabindex={disabled ? "-1" : "0"}  -->
<a
  href={disabled ? "#" : href}
  class={`group inline-block ${className}`}
  aria-label={ariaLabel}
  title={title}
  aria-disabled={disabled}  
>
  <slot />
</a>

<style>
  a {
    @apply hover:text-skin-accent;
  }
</style>
